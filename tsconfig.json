{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "es2017",
      "DOM"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": "./out",
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true
  },
  "include": [
    "src",
  ]
}